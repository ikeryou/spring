

*
  box-sizing: border-box;

body, html
  text-size-adjust: 100%;
  overflow-x: hidden;
  background-color: #FFF;

a
  color: inherit;
  text-decoration: none;

svg
  width: 100%
  height: 100%

img, canvas
  vertical-align: bottom
  user-select: none;


.noPointer
  pointer-events: none;


.br-xs
  display: none;
  @media screen and (max-width:$BREAKPOINT)
    display: block;

.br-lg
  display: block;
  @media screen and (max-width:$BREAKPOINT)
    display: none;



body
  padding: 50px;
  background-color: #fafafa;
  font-family: 'Roboto', sans-serif;
  // letter-spacing: 0.08em;

.con
  margin-bottom: 300px;

.ttl
  font-size: 24px;
  margin-bottom: 40px;
  font-weight: bold;
  color: #222;
  text-decoration: underline;

.dot
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin-top: 200px;

.dot.motionA
  background-color: #fd8a33;

.dot.motionB
  background-color: #1688cd;

.dot.motionC
  background-color: #50ebb5;

.text
  margin-top: 200px;
  font-size: 32px;
  color: #000;
  font-weight: bold;
